<!-- Create a new patient. -->
<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>architecture:Patient</targetclass>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>architecture:firstName</item>
        <item>architecture:lastName</item>
    </labelparts>
	
    <!-- Headline of this formula -->
    <title>Patient - Master data</title>
	
    <!-- Introducing text to inform the user about the formula -->
    <description>Please select a patient and after reload set his / her family status.</description>
    
    <!-- Shows a dropdown box to select an existing resource. -->
    <!-- All relations and fields below are going to connect to this resource. -->
    <selectResourceOfType>architecture:Patient</selectResourceOfType>
	
    <sections>
        
        <item>
            
            <!-- List -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:single</predicateuri>
                <type>list</type>
                <typeparameter>
                    <item>
                        <label>Yes</label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>No</label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
            
            <!-- List -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:divorced</predicateuri>
                <type>list</type>
                <typeparameter>
                    <item>
                        <label>Yes</label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>No</label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
            
            <!-- List -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:married</predicateuri>
                <type>list</type>
                <typeparameter>
                    <item>
                        <label>Yes</label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>No</label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
            
            <!-- List -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:inARelationShip</predicateuri>
                <type>list</type>
                <typeparameter>
                    <item>
                        <label>Yes</label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>No</label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
            
		</item> 
        
	</sections>
</form>
