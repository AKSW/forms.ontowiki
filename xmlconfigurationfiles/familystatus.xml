<!-- Create a new patient. -->
<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>http://www.dispedia.de/o/Patient</targetclass>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>http://www.dispedia.de/o/firstName</item>
        <item>http://www.dispedia.de/o/lastName</item>
    </labelparts>
	
    <!-- Headline of this formula -->
    <title>
        <de>Patient - Familienstatus</de>
        <en>Patient - Family status</en>
    </title>
	
    <!-- Introducing text to inform the user about the formula -->
    <description>
        <de>Bitte wählen Sie einen Patienten aus und setzen sie danach seinen familiären Status.</de>
        <en>Please select a patient and after reload set his / her family status.</en>
    </description>
    
    <!-- Shows a dropdown box to select an existing resource. -->
    <!-- All relations and fields below are going to connect to this resource. -->
    <selectResourceOfType>http://www.dispedia.de/o/Patient</selectResourceOfType>
	
    <sections>
        
        <item>
            
            <!-- List -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/single</predicateuri>
                <type>list</type>
                <typeparameter>
                    <item>
                        <label>Yes</label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>No</label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
            
            <!-- List -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/divorced</predicateuri>
                <type>list</type>
                <typeparameter>
                    <item>
                        <label>Yes</label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>No</label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
            
            <!-- List -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/married</predicateuri>
                <type>list</type>
                <typeparameter>
                    <item>
                        <label>Yes</label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>No</label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
            
            <!-- List -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/inARelationship</predicateuri>
                <type>list</type>
                <typeparameter>
                    <item>
                        <label>Yes</label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>No</label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
            
		</item> 
        
	</sections>
</form>
