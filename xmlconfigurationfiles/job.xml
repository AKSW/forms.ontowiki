<!-- Create a new patient. -->
<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>http://www.dispedia.de/o/Patient</targetclass>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>http://www.dispedia.de/o/firstName</item>
    </labelparts>
	
    <!-- Headline of this formula -->
    <title>
        <de>Berufliche Situation eines Patienten</de>
        <en>Patients job</en>
    </title>
	
    <!-- Introducing text to inform the user about the formula -->
    <description>
        <de>Bitte w√§hlen Sie einen Patienten aus und setzen Sie danach seine berufliche Situation.</de>
        <en>Please select a patient and after reload set his / her job.</en>
    </description>
    
    <!-- Shows a dropdown box to select an existing resource. -->
    <!-- All relations and fields below are going to connect to this resource. -->
    <selectResourceOfType>http://www.dispedia.de/o/Patient</selectResourceOfType>
	
    <sections>
        
        <item>
            
            <!-- Textfield -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/education</predicateuri>
			</predicate>
            
            
            <!-- Resource -->
			<predicate> 
                            <mandatory>0</mandatory>
                            <predicateuri>http://www.dispedia.de/o/hasEmployer</predicateuri>
                            <type>resource</type>
                            <typeparameter>
                                <resource>http://www.dispedia.de/o/Agent</resource>
                            </typeparameter>
			</predicate>
            
            
            <!-- Resource -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/hasAddress</predicateuri>
                <type>resource</type>
                <typeparameter>
                    <resource>http://www.dispedia.de/o/Address</resource>
                </typeparameter>
			</predicate>
            
            <!-- Textfield -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/journeyToWork</predicateuri>
			</predicate>
            
		</item> 
        
	</sections>
</form>
