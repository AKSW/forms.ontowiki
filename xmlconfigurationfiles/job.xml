<!-- Create a new patient. -->
<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>architecture:Pet</targetclass>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>architecture:firstName</item>
    </labelparts>
	
    <!-- Headline of this formula -->
    <title>Patient - set Job</title>
	
    <!-- Introducing text to inform the user about the formula -->
    <description>Please select a patient and after reload set his / her job.</description>
    
    <!-- Shows a dropdown box to select an existing resource. -->
    <!-- All relations and fields below are going to connect to this resource. -->
    <selectResourceOfType>architecture:Patient</selectResourceOfType>
	
    <sections>
        
        <item>
            
            <!-- Textfield -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:education</predicateuri>
			</predicate>
            
            
            <!-- Resource -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:hasEmployer</predicateuri>
                <type>resource</type>
                <typeparameter>
                    <resource>architecture:Agent</resource>
                </typeparameter>
			</predicate>
            
            
            <!-- Resource -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:hasAddress</predicateuri>
                <type>resource</type>
                <typeparameter>
                    <resource>architecture:Address</resource>
                </typeparameter>
			</predicate>
            
            <!-- Textfield -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:journeyToWork</predicateuri>
			</predicate>
            
		</item> 
        
	</sections>
</form>
