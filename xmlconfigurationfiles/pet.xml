<!-- Create a new patient. -->
<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>architecture:Pet</targetclass>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>architecture:petName</item>
    </labelparts>
	
    <!-- Headline of this formula -->
    <title>
        <de>Haustiere anlegen / bearbeiten</de>
        <en>Patient - Pets</en>
    </title>
	
    <!-- Introducing text to inform the user about the formula -->
    <description>
        <de>Fügen Sie ein neues Haustier hinzu oder bearbeiten Sie ein bestehendes.</de>
        <en>Add a new pet or edit an existing one.</en>
    </description>
	
    <sections>
        
        <item>
            
            <predicate> 
				<mandatory>1</mandatory>
				<predicateuri>architecture:petName</predicateuri>
			</predicate>
			
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>architecture:spezies</predicateuri>
			</predicate>
			
			<!-- List -->		
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:gender</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>weiblich</de>
                            <en>female</en>
                        </label>
                        <value>http://xmlns.com/foaf/0.1/gender#female</value>
                    </item>
                    <item>
                        <label>
                            <de>männlich</de>
                            <en>male</en>
                        </label>
                        <value>http://xmlns.com/foaf/0.1/gender#male</value>
                    </item>
                </typeparameter>
			</predicate>
			
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:birthDate</predicateuri>
				<type>date</type>
			</predicate>
            
		</item> 
        
	</sections>
</form>
