<!-- Create a new patient. -->
<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>http://www.dispedia.de/o/Address</targetclass>
    
    <targetmodel>http://patients.dispedia.de/</targetmodel>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>http://www.dispedia.de/o/firstName</item>
    </labelparts>
	
    <!-- Headline of this formula -->
    <title>
        <de>Addresse eines Patienten setzen</de>
        <en>Patient - set Address</en>
    </title>
	
    <!-- Introducing text to inform the user about the formula -->
    <description>
        <de>Bitte wÃ¤hlen Sie einen Patienten aus und weisen Sie ihm danach seine Addresse zu.</de>
        <en>Please select a patient and after reload set his / her his address.</en>
    </description>
    
    <!-- Shows a dropdown box to select an existing resource. -->
    <!-- All relations and fields below are going to connect to this resource. -->
    <selectResourceOfType>http://www.dispedia.de/o/Patient</selectResourceOfType>
	
    <sections>
        
        <item>
            
            <!-- Resource -->
            <predicate> 
                <mandatory>0</mandatory>
                <predicateuri>http://www.dispedia.de/o/hasAddress</predicateuri>
                <type>resource</type>
                <typeparameter>
                    <resource>http://www.dispedia.de/o/Address</resource>
                </typeparameter>
            </predicate>

	</item> 
        
	</sections>
</form>
