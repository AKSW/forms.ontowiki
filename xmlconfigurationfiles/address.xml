<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>http://www.dispedia.de/o/Address</targetclass>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>http://www.dispedia.de/o/street</item>
        <item>http://www.dispedia.de/o/city</item>
    </labelparts>
	
    <!-- Headline of this formula. -->
    <title>
        <de>Addresse</de>
        <en>Address</en>
    </title>
	
    <!-- Introducing text to inform the user about the formula. -->
    <description>
        <de>Erstellen Sie eine neue Addresse oder Ã¤ndern Sie eine bestehende ab.</de>
        <en>Add a new / edit an existing address.</en>
    </description>
	
    <sections>
        
        <!-- A new section -->
		<item>
            
            <!-- Textfield -->		
            <predicate> 
				<mandatory>1</mandatory>
				<predicateuri>http://www.dispedia.de/o/city</predicateuri>
            </predicate>
            
            <!-- Textfield -->		
            <predicate> 
				<mandatory>1</mandatory>
				<predicateuri>http://www.dispedia.de/o/street</predicateuri>
            </predicate>
            
            <!-- List -->		
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>http://www.dispedia.de/o/homeLawType</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>Erstwohnung</de>
                            <en>First Home</en>
                        </label>
                        <value>first home</value>
                    </item>
                    <item>
                        <label>
                            <de>Zweitwohnung</de>
                            <en>Secondary Residence</en>
                        </label>
                        <value>secondary residence</value>
                    </item>
                </typeparameter>
			</predicate>
            
            <!-- List -->		
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>http://www.dispedia.de/o/homeHousingType</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>Einfamilienhaus</de>
                            <en>Detached House</en>
                        </label>
                        <value>detached house</value>
                    </item>
                    <item>
                        <label>
                            <de>Mehrfamilienhaus</de>
                            <en>Multi Family Home</en>
                        </label>
                        <value>multi family home</value>
                    </item>
                </typeparameter>
			</predicate>
            
            <!-- List -->		
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/homeFlatType</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>Dachgeschosswohnung</de>
                            <en>Loft Apartment</en>
                        </label>
                        <value>loft apartment</value>
                    </item>
                    <item>
                        <label>
                            <de>Einzelwohnung</de>
                            <en>Apartment</en>
                        </label>
                        <value>apartment</value>
                    </item>
                    <item>
                        <label>
                            <de>Maisonette-Wohnung</de>
                            <en>Maisonette</en>
                        </label>
                        <value>maisonette</value>
                    </item>
                </typeparameter>
			</predicate>
            
             <!-- List -->		
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>http://www.dispedia.de/o/homeLevel</predicateuri>
			</predicate>
            
            <!-- List -->		
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/isSuitableForOlderPersons</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>Ja</de>
                            <en>Yes</en>
                        </label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>
                            <de>Nein</de>
                            <en>No</en>
                        </label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
			            
            <!-- List -->		
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/isBarrierFree</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>Ja</de>
                            <en>Yes</en>
                        </label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>
                            <de>Nein</de>
                            <en>No</en>
                        </label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
			            
            <!-- List -->		
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/hasWheelChairSize</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>Ja</de>
                            <en>Yes</en>
                        </label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>
                            <de>Nein</de>
                            <en>No</en>
                        </label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
			            
            <!-- List -->		
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/hasGarden</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>Ja</de>
                            <en>Yes</en>
                        </label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>
                            <de>Nein</de>
                            <en>No</en>
                        </label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
			            
            <!-- List -->		
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/hasStairs</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>Ja</de>
                            <en>Yes</en>
                        </label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>
                            <de>Nein</de>
                            <en>No</en>
                        </label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
			            
            <!-- List -->		
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/hasLift</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>Ja</de>
                            <en>Yes</en>
                        </label>
                        <value>true</value>
                    </item>
                    <item>
                        <label>
                            <de>Nein</de>
                            <en>No</en>
                        </label>
                        <value>false</value>
                    </item>
                </typeparameter>
			</predicate>
            
		</item> 
        
	</sections>
</form>
