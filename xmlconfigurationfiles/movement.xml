<!-- Create a new patient. -->
<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>architecture:HealthState</targetclass>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>architecture:firstName</item>
    </labelparts>
	
    <!-- Headline of this formula -->
    <title>
        <de>Bewegungsfähigkeit eines Patienten</de>
        <en>Patient - set Movement</en>
    </title>
	
    <!-- Introducing text to inform the user about the formula -->
    <description>
        <de>Bitte wählen Sie einen Patienten aus und setzen Sie danach seine Bewegungsfähigkeit.</de>
        <en>Please select a patient and after reload set his / her movement.</en>
    </description>
    
    <!-- Shows a dropdown box to select an existing resource. -->
    <!-- All relations and fields below are going to connect to this resource. -->
    <selectResourceOfType>architecture:Patient</selectResourceOfType>
	
    <sections>
        
        <item>
            
            <!-- Resource -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:movementDescription</predicateuri>
                <type>resource</type>
                <typeparameter>
                    <resource>architecture:HealthState</resource>
                </typeparameter>
			</predicate>
            
		</item> 
        
	</sections>
</form>
