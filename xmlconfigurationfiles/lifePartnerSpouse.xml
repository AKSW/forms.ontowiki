<!-- Create a new patient. -->
<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>architecture:Patient</targetclass>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>architecture:firstName</item>
        <item>architecture:lastName</item>
    </labelparts>
	
    <!-- Headline of this formula -->
    <title>
        <de>Lebenspartner / EhegattIn eines Patienten</de>
        <en>Patient - Life partner / Spouse</en>
    </title>
	
    <!-- Introducing text to inform the user about the formula -->
    <description>
        <de>Bitte wÃ¤hlen Sie einen Patienten aus und setzen Sie danach seinen LebenspartnerIn / EhegattIn.</de>
        <en>Please select a patient and after reload set his / her life partner.</en>
    </description>
    
    <!-- Shows a dropdown box to select an existing resource. -->
    <!-- All relations and fields below are going to connect to this resource. -->
    <selectResourceOfType>architecture:Patient</selectResourceOfType>
	
    <sections>
        
        <item>
            
            <!-- Resource -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:isInARelationshipWith</predicateuri>
                <type>resource</type>
                <typeparameter>
                    <resource>architecture:Person</resource>
                </typeparameter>
			</predicate>
            
		</item> 
        
	</sections>
</form>
