<!-- Create a new person. -->
<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>http://www.dispedia.de/o/Person</targetclass>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>http://www.dispedia.de/o/firstName</item>
        <item>http://www.dispedia.de/o/lastName</item>
    </labelparts>
	
    <!-- Headline of this formula. -->
    <title>
        <de>Person</de>
        <en>Person</en>
    </title>
	
    <!-- Introducing text to inform the user about the formula. -->
    <description>
        <de>Hier können Sie Daten zu einer Person erfassen.</de>
        <en>Here you can insert personal information.</en>
    </description>
	
    <sections>
        
        <!-- A new section -->
		<item>
            
            <!-- title of this section part -->
			<title>
                <de>Person information</de>
                <en>Person information</en>
            </title> 	
						
            <!-- Textfield -->
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>http://www.dispedia.de/o/firstName</predicateuri>
			</predicate>
			
            <!-- Textfield -->
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>http://www.dispedia.de/o/lastName</predicateuri>
			</predicate>
			
            <!-- Date -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/birthdate</predicateuri>
				<type>birthdate</type>
			</predicate>
            	
            <!-- List -->		
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>http://www.dispedia.de/o/gender</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>weiblich</de>
                            <en>female</en>
                        </label>
                        <value>http://xmlns.com/foaf/0.1/gender#female</value>
                    </item>
                    <item>
                        <label>
                            <de>männlich</de>
                            <en>male</en>
                        </label>
                        <value>http://xmlns.com/foaf/0.1/gender#male</value>
                    </item>
                </typeparameter>
			</predicate>
		
		</item>
        
	</sections>
</form>
