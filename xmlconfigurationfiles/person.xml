<!-- Create a new person. -->
<form>

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>http://www.dispedia.de/o/Person</targetclass>

    <targetmodel>http://patients.dispedia.de/</targetmodel>
	
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>http://schema.org/givenName</item>
        <item>http://schema.org/familyName</item>
    </labelparts>

    <!-- Headline of this formula. -->
    <title>
        <de>Person</de>
        <en>Person</en>
    </title>

    <!-- Introducing text to inform the user about the formula. -->
    <description>
        <de>Hier können Sie Daten zu einer Person erfassen.</de>
        <en>Here you can insert personal information.</en>
    </description>

    <sections>

        <!-- A new section -->
        <item>

            <!-- title of this section part -->
            <title>
                <de>Person information</de>
                <en>Person information</en>
            </title>

            <!-- Textfield -->
            <predicate>
                <mandatory>1</mandatory>
                <predicateuri>http://schema.org/givenName</predicateuri>
            </predicate>

            <!-- Textfield -->
            <predicate>
                <mandatory>1</mandatory>
                <predicateuri>http://schema.org/familyName</predicateuri>
            </predicate>

            <!-- Date -->
            <predicate>
                <mandatory>0</mandatory>
                <predicateuri>http://schema.org/birthDate</predicateuri>
                <type>birthdate</type>
            </predicate>

        <!-- Date -->
            <predicate>
                <mandatory>0</mandatory>
                <predicateuri>http://schema.org/deathDate</predicateuri>
                <type>birthdate</type>
            </predicate>

            <!-- List -->
            <predicate>
                <mandatory>0</mandatory>
                <predicateuri>http://schema.org/gender</predicateuri>
                <type>list</type>
                <typeparameter>
                    <item>
                        <label>
                            <de>weiblich</de>
                            <en>female</en>
                        </label>
                        <value>http://xmlns.com/foaf/0.1/gender#female</value>
                    </item>
                    <item>
                        <label>
                            <de>männlich</de>
                            <en>male</en>
                        </label>
                        <value>http://xmlns.com/foaf/0.1/gender#male</value>
                    </item>
                </typeparameter>
            </predicate>

            <!-- rolls -->
            <predicate>
                <mandatory>0</mandatory>
                <predicateuri>http://www.w3.org/1999/02/22-rdf-syntax-ns#type</predicateuri>
                <title>
                    <de>Rollen</de>
                    <en>rolls</en>
                </title>
                <type>class</type>
                <typeparameter>
                    <item>
						<class>http://www.dispedia.de/o/Patient</class>
                    </item>
                </typeparameter>
            </predicate>
            <!-- service -->
            <predicate>
                <mandatory>0</mandatory>
                <predicateuri>http://www.heppnetz.de/ontologies/goodrelations/v1#offers</predicateuri>
                <title>
                    <de>Dienstleistung</de>
                    <en>Service</en>
                </title>
                <type>class</type>
                <typeparameter>
                    <item>
                        <class>http://www.serviceOntology.org/Service</class>
                            <relation>http://www.w3.org/1999/02/22-rdf-syntax-ns#type</relation>
                            <editable>1</editable>
                            <filter>unbound</filter>
                    </item>
                </typeparameter>
            </predicate>
        </item>
        
        <item>
            <title>
            <de>Adresse</de>
            <en>Address</en>
            </title>
            <!-- Include a XML file -->
            <nestedconfig>
            <xmlfile>postaladdress.xml</xmlfile>
            <relations>
                <item>http://www.serviceOntology.org/hasAddress</item>
            </relations>
            <typeclass>http://schema.org/PostalAddress</typeclass>
            </nestedconfig>
        </item>
        <item>
            <title>
                <de>Geokoordinaten</de>
                <en>Geo Coordinates</en>
            </title>
            <!-- Include a XML file -->
            <nestedconfig>
                <xmlfile>geocoordinates.xml</xmlfile>
                <relations>
                    <item>http://www.serviceOntology.org/hasAddress</item>
                </relations>
                <typeclass>http://schema.org/GeoCoordinates</typeclass>
            </nestedconfig>
        </item>
    </sections>
</form>
