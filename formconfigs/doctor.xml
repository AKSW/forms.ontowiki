<!-- Create a new doctor. -->
<form> 
    <targetclass>architecture:Person</targetclass>				
	
    <labelparts>
        <item>architecture:firstName</item>
        <item>architecture:lastName</item>
    </labelparts>
    
    <headline>Treating physician</headline>
    
	<introduceText></introduceText>
	
    <sections>
		<item>
			<caption>Treating physician</caption> 								
			          
            <!-- Textfield -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:title</predicateuri>
			</predicate>
			            
			<!-- Textfield -->
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>architecture:firstName</predicateuri>
			</predicate>
			
            <!-- Textfield -->
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>architecture:lastName</predicateuri>
			</predicate>
            
            <!-- Textfield -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:street</predicateuri>
			</predicate>
			
            <!-- Textfield -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:zipCode</predicateuri>
			</predicate>
			
			<!-- List -->		
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>architecture:typeOfDoctor</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>internist</label>
                        <value>architecture:internist</value>
                    </item>
                    <item>
                        <label>oncologist</label>
                        <value>architecture:oncologist</value>
                    </item>
                    <item>
                        <label>physiotherapist</label>
                        <value>architecture:physiotherapist</value>
                    </item>
                </typeparameter>
			</predicate>
			
            <!-- Textfield -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:doctorSpecialization</predicateuri>
			</predicate>
            
		</item>
        
	</sections>
</form>
