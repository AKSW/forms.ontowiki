<!-- Create a new person. -->
<form> 

    <!-- All used predicate-tags are related to this class. -->
    <targetclass>architecture:Person</targetclass>
    
    <!-- Needed by an URI generation function. -->
    <labelparts>
        <item>architecture:firstName</item>
        <item>architecture:lastName</item>
    </labelparts>
	
    <!-- Headline of this formula -->
    <headline>Person</headline>
	
    <!-- Introducing text to inform the user about the formula -->
    <introduceText>Lorem ipsum dolor sit amet, consetetur sadipscing elitr.</introduceText>
	
    <sections>
        
        <!-- A new section -->
		<item>
            
            <!-- Caption of this section part -->
			<caption>Person information</caption> 	
						
            <!-- Textfield -->
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>architecture:firstName</predicateuri>
			</predicate>
			
            <!-- Textfield -->
			<predicate> 
				<mandatory>1</mandatory>
				<predicateuri>architecture:lastName</predicateuri>
			</predicate>
			
            <!-- Textfield -->
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:birthdate</predicateuri>
				<type>birthdate</type>
			</predicate>
            	
            <!-- Textfield -->		
			<predicate> 
				<mandatory>0</mandatory>
				<predicateuri>architecture:gender</predicateuri>
				<type>list</type>
                <typeparameter>
                    <item>
                        <label>female</label>
                        <value>http://xmlns.com/foaf/0.1/gender#female</value>
                    </item>
                    <item>
                        <label>male</label>
                        <value>http://xmlns.com/foaf/0.1/gender#male</value>
                    </item>
                </typeparameter>
			</predicate>
		
		</item>
	</sections>
</form>
