		<item id="2">
			<caption>Hausarzt angeben bzw. anlegen</caption>
			<predicate target="architecture:Patient" mandatory="0" type="simpletext">architecture:isSupervisedBy</predicate> 
			</item>
		<item id="3">
			<caption>Daten zur Person</caption>
			<predicate target="architecture:Person" mandatory="1" type="simpletext">architecture:firstName</predicate> 			
			<predicate target="architecture:Person" mandatory="0" type="simpletext">architecture:lastName</predicate>
			<constraint sourcegroup="2" type="xor" targetgroup="3" /> 
			<constraint sourcegroup="3" type="pred" targetgroup="1" predicate="dispedia:isDoctorOf" /> 
		</item> 
