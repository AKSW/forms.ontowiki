	<trigger>dispedia:Patient</trigger> 
	<sections>
		<item id="1">
			<caption>Daten des Patienten</caption> 								
			<predicate target="architecture:Patient" mandatory="1" type="simpletext">architecture:firstName</predicate> 
			<predicate target="architecture:Patient" mandatory="1" type="simpletext">architecture:lastName</predicate> 
